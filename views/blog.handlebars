<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{description}}</p>
  <p class="contents">{{content}}</p>
  <p>Created by {{user.username}} on {{format_date date_created}}</p>
  {{#if logged_in}}
  <div class="text-center col-md-4">
    <a class="btn btn-primary" data-id="{{id}}" href="/blogEdit/{{id}}">Edit Post</a>
    <button class="btn btn-sm btn-danger btn-delete" data-id="{{id}}">Delete Post</button>
  </div>
  {{/if}}
  <div class="col-md-6 blog-list">
    <h3>Comments:</h3>
    <div class="row">
      <div class="col-md-6">
        <form class="form comment-form" data-id="{{id}}">
          <div class="form-group">
            <label for="comment-content">Contribute</label>
            <input class="form-input" type="text" id="comment-content" />
          </div>
          <div class="form-group">
            <button class="btn btn-primary" type="submit">Add Comment</button>
          </div>
        </form>
      </div>
    </div>
    {{!-- its not pulling the comment, dont know why --}}
    {{!-- <div>here{{../../comments.length}}</div> --}}
    {{#if comments.length}}
    {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <p class="contents">{{comment.content}}</p>
        <p>Created by {{comment.user.username}} on {{format_date comment.date_created}}</p>
      </div>
    </div>
    {{/each}}
    {{else}}
    <p>You currently don't have any comments.</p>
    {{/if}}
  </div>
</div>

<script src="/js/blog.js"></script>
