<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{description}}</p>
  <p class="text-left">{{content}}</p>
  <p class="text-right note">Created by {{user.username}} on {{format_date date_created}}</p>
  {{#if isCreator}}
  <div class="text-center col-md-4">
    <a class="btn btn-primary" data-id="{{id}}" href="/blogEdit/{{id}}">Edit Post</a>
    <button class="btn btn-sm btn-danger btn-delete" data-id="{{id}}">Delete Post</button>
  </div>
  {{/if}}
  <div class="text-center blog-list">
    <h3>Comments:</h3>
    <div class="row">
      <div class="col-md-6">
        {{#if logged_in}}
        <form class="form comment-form" data-id="{{id}}">
          <div class="form-group">
            <input class="form-input" type="text" id="comment-content" placeholder="text here" />
          </div>
          <div class="form-group">
            <button class="btn btn-primary" type="submit">Add Comment</button>
          </div>
        </form>
        {{/if}}
      </div>
    </div>
    {{#if comments.length}}
    {{#each comments as |comment|}}
    <div class="row comments mb-2">
      <div class="col-md-8">
        <p class="text-left">{{comment.content}}</p>
        <p class="text-right note">Created by {{comment.user.username}} on {{format_date comment.date_created}}</p>
      </div>
    </div>
    {{/each}}
    {{else}}
    <p>You currently don't have any comments.</p>
    {{/if}}
  </div>
</div>

<script src="/js/blog.js"></script>
